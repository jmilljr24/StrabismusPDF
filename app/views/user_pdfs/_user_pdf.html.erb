<%= turbo_stream_from ["processing_pdf", @user_pdf.id] %>
<%= turbo_frame_tag id="pdf_load", src: colorize_pdf_path(id: @user_pdf.id) do %>
  <%= render 'loading' %>
<% end %>
<%= turbo_frame_tag id="pdf_load_fallback" do %>
  <% if @blob %>
    <%= link_to "Download file", rails_blob_path(@blob, disposition: 'attachment'), class: "shadow min-w-max max-h-fit bg-[rgb(80,124,92)]
  hover:bg-gray-400 focus:shadow-outline
    focus:outline-none text-white font-bold m-2 py-2 px-4 rounded max-w-min" %>
  <% end %>
<% end %>
