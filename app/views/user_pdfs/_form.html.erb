<%= form_with(model: user_pdf) do |form| %>
  <% if user_pdf.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user_pdf.errors.count, "error") %> prohibited this user_pdf from being saved:</h2>
      <ul>
        <% user_pdf.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :pdf, class: 'form-label' %>
    <%= form.file_field :pdf, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>
  <div class="shadow bg-blue-700 hover:bg-blue-400 focus:shadow-outline
  focus:outline-none text-white font-bold py-2 px-4 rounded max-w-min">
    <%= form.submit "Click to generate Highlighted PDf" %>
