<div id="<%= dom_id blog_post %>">
  <%= image_tag blog_post.cover_image.variant(resize_to_limit: [800, 800]), class: "rounded-md object-cover h-[500px] w-[900px]"%>
  <p>
    <strong>Title:</strong>
    <%= blog_post.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= blog_post.content %>
  </p>
  <p>
    <strong>Kit:</strong>
    <%= blog_post.kit %>
  </p>
  <p>
    <strong>Completed:</strong>
    <%= blog_post.completed %>
  </p>
  <p>
    <strong>Duration:</strong>
    <%= blog_post.duration %>
  </p>
  <p>
    <strong>Section:</strong>
    <%= blog_post.section %>
  </p>
</div>
