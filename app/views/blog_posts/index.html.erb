<p style="color: green"><%= notice %></p>
<h1>Blog posts</h1>
<div id="blog_posts" class="max-w-5xl">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
    <p>
      <%= link_to "Show this blog post", blog_post %>
    </p>
  <% end %>
</div>
<%= link_to "New blog post", new_blog_post_path %>
